<%- include('layouts/header') -%>
<main class="container">
  <h1 class="my-3"><%= title %></h1>
  <div class="top mb-5">

    <form method="post" action="/users/login">
      <div class="mb-3">
        <label class="form-label">Username</label>
        <input
          type="text"
          name="username"
          class="form-control"
          placeholder="Username"
        />
      </div>

      <div class="mb-3">
        <label class="form-label">Password</label>
        <input
          type="password"
          name="password"
          class="form-control"
          placeholder="Password"
        />
      </div>

      <button type="submit" class="btn border border-primary">Log in</button>
    </form>
  </div>

  <div class="top">
    <h2>For log in as admin </h2>
    <p class="my-3 fw-bold">Username ===>  admin</p>
    <p class="fw-bold">Password ===> 123456789</p>
  </div>

  <%- include('layouts/footer') -%>
</main>
