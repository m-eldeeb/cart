<%- include('../layouts/adminheader.ejs') -%>
<h2 class="page-title mb-3">Categories</h2>
<div class="top ">

  <a href="/admin/categories/add-category" class="btn btn-primary "
    >Add a new category</a
  >
</div>
<br />
<table class="table">
  <thead>
    <tr>
      <th scope="col">#Id</th>
      <th scope="col">Category</th>
      <th scope="col">Options</th>
    </tr>
  </thead>
  <tbody>
    <% categories.forEach(function(category,index){ %>
    <tr id="id_<%= category._id %>" class="<%= category.slug %>">
      <td><%= index+1 %></td>
      <td><%= category.title %></td>
      <td>
        <a
          class="btn btn-primary mx-2"
          href="/admin/categories/edit-category/<%= category._id %>"
          >Edit</a
        >
        <% if (category.slug == "home") { %> <% } else {%>

        <a
          class="btn btn-danger"
          href="/admin/categories/delete-category/<%= category._id %>"
          id="confirm"
          >Delete</a
        >

        <% }%>
      </td>
    </tr>
    <% }); %>
  </tbody>
</table>

<%-include('../layouts/adminfooter.ejs') -%>
