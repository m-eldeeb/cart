<%- include('layouts/header') -%>
<main class="container">
  <div class="row products">
    
    <% products.forEach(function(p){ %>
    <div class="col-xs-12 col-md-4 mt-5">
      <div class="card card-img-top">
        <a class="pa" href="/products/<%= p.category %>/<%= p.slug %>">
          <img
            class="pimage"
            src="/product_images/<%= p.id %>/<%= p.image %>"
            alt=""
          />
        </a>
        <div class="card-body">
          <h5 class="card-title"><%= p.title %></h5>
          <p class="card-text">$<%= parseFloat(p.price).toFixed(2) %></p>

          <a class="vd btn btn-primary" href="/products/<%= p.category %>/<%= p.slug %>"
            >View Details</a
          >
        </div>
      </div>
    </div>
    <% }); %>
  </div>
  <%- include('layouts/footer') -%>
</main>
